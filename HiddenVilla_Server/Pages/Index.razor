@page "/"

<h2 class="bg-light border p-2">
    First Room
</h2>
Room: @Room.RoomName<br />
Price: @Room.Price<br />

<input type="number" @bind-value="@Room.Price" @bind-value:event="oninput" /><br />
<input type="checkbox" @bind-value="Room.IsActive" checked="@(Room.IsActive ? "checked" : null)" /> &nbsp; Is Active<br />

<span>This room is @(Room.IsActive ? "active" : "inactive")</span>

<select @bind="SelectedRoomProp">
    @foreach(var prop in Room.RoomProps)
    {
        <option value="@prop.Name">@prop.Name</option>
    }
</select>
<span>The Room Prop Selected is: @SelectedRoomProp</span>

@code{
    string SelectedRoomProp = "";

    Models.BlazorRoom Room = new Models.BlazorRoom()
    {
        Id = 1,
        RoomName = "Villa Suite",
        IsActive = true,
        Price = 499,
        RoomProps = new List<Models.BlazorRoomProp>
        {
            new Models.BlazorRoomProp { Id = 1, Name = "Sq Ft", Value = "100"},
            new Models.BlazorRoomProp { Id = 2, Name = "Occupancy", Value = "3"}
        }
    };
}
