<div>
    <div class="alert alert-info">@Title</div>
    <div class="alert alert-success">
        @if (SecondChildContent == null)
        {
            @if (ChildContent == null)
            {
                <span>Hello, from Empty Render Fragment</span>
            }
            else
            {
                <span>@ChildContent</span>
            }
        }
        else
        {
            <span>@SecondChildContent</span>
        }
    </div>
    <button class="btn btn-danger" @onclick="OnClickMethod">Button to be clicked!</button>
    <GrandChildComponent />
</div>

@code {
    [Inject]
    public IJSRuntime JSRuntime { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public RenderFragment SecondChildContent { get; set; }

    [Parameter]
    public EventCallback<MouseEventArgs> OnClickMethod { get; set; }

    public async Task ShowToastrSuccess()
    {
        await JSRuntime.ToastrSuccess("Woo! Success is on the way!");
    }
}